{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "allowJs": true,
    "emitDeclarationOnly": true,
    "outFile": "types/index.d.ts",
    "target": "esnext",
    "module": "commonjs",
    "removeComments": true,
    "esModuleInterop": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "strictNullChecks": true
  },
  "include": ["./src/**/*.js"]
}
